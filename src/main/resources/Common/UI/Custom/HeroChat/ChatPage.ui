$C = "../Common.ui";

$C.@DecoratedContainer {
    @CloseButton = true;
    Anchor: (Width: 900, Height: 600);

    #Title {
        Group {
            $C.@Title {
                @Text = "Chat Customization";
            }
        }
    }

    #Content {
        Label {
          Text: "PREVIEW";
          Style: (TextColor: #96a9be, FontSize: 14, RenderBold: true, RenderUppercase: true);
            Anchor: (Bottom: 8);
        }

        Group #PreviewContainer {
            Anchor: (Height: 40, Bottom: 16);
            Background: (Color: #0a0f17);
            Padding: (Horizontal: 14, Vertical: 12);
            LayoutMode: Left;
        }

        Label {
          Text: "Format";
          Style: (TextColor: #96a9be, FontSize: 14, RenderBold: true, RenderUppercase: true);
          Anchor: (Bottom: 8);
        }

        $C.@TextField #PreviewField {
            Anchor: (Height: 38, Bottom: 32);
            Style: (FontSize: 16, TextColor: #ffffff);
        }

        Label {
          Text: "Color Picker Helper";
          Style: (TextColor: #96a9be, FontSize: 14, RenderBold: true, RenderUppercase: true);
          Anchor: (Bottom: 14);
        }

        ColorPicker #ColorPicker {
            Anchor: (Width: 140, Height: 120, Left: 12, Bottom: 8);
            Value: #FF5555FF;
            Style: $C.@DefaultColorPickerStyle;
        }

        $C.@TextField #ColorField {
            Value: "#FF5555";
            Anchor: (Width: 140, Height: 38, Left: 12, Bottom: 16);
            Style: (FontSize: 16, TextColor: #ffffff);
        }

        Group { Anchor: (Height: 20); }

        $C.@TextButton #MyButton {
            @Text = "Click Me";
            Anchor: (Width: 150, Height: 44);
        }
    }
}