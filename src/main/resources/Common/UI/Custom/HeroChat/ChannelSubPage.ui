$C = "../Common.ui";
$S = "SettingComponents.ui";

Group #PreviewContainer {
  Anchor: (Bottom: 16);
  Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 10);
  Padding: (Horizontal: 12, Vertical: 12);

  Label #PreviewLbl {
    Style: (FontSize: 16, TextColor: #ffffff, RenderBold: false);
  }
}

Group {
  LayoutMode: Left;
  Label {
    Text: "Format";
    Style: (TextColor: #96a9be, FontSize: 14, RenderBold: true, RenderUppercase: true);
    Anchor: (Bottom: 6, Left: 4);
  }

  Group { FlexWeight: 1; }

  Label {
    Text: "Color Picker Helper:";
    Style: (TextColor: #96a9be, FontSize: 16, RenderBold: true, VerticalAlignment: Center);
    Anchor: (Bottom: 8, Right: 12);
  }

  ColorPickerDropdownBox #ColorPicker {
    Anchor: (Width: 100, Height: 20, Right: 12, Bottom: 8);
    DisplayTextField: true;
    Style: $C.@DefaultColorPickerDropdownBoxStyle;
    Color: #FFFF55FF;
  }
}

Group {
  Anchor: (Bottom: 8);
  Background: (TexturePath: "Assets/OptionBackgroundPatch.png", Border: 16);
  LayoutMode: Top;

  MultilineTextField #PreviewField {
    AutoGrow: false;
    Anchor: (Height: 64);
    Padding: (Left: 10, Vertical: 6, Right:4);
    ContentPadding: (Right:8);
    ScrollbarStyle: $C.@DefaultScrollbarStyle;
    Style: (FontSize: 16, TextColor: #d4d4d4);
  }
}

$S.@TextSetting #Permission {
  @Text = "Permission";
  @Placeholder = "Channel permission";
}

$S.@CheckSetting #CrossWorld {
  @Text = "Cross world";
}

$S.@SliderSetting #Distance {
  @Text = "Distance";
  @ExtraText = "(Requires cross world off)";
}

Group { Anchor: (Height: 16); }

Group {
  LayoutMode: Left;

  Label {
    Text: "Components";
    Style: (TextColor: #96a9be, FontSize: 16, RenderBold: true, RenderUppercase: true, VerticalAlignment: Center);
  }

  $C.@TertiaryTextButton #NewComponentBtn {
    @Text = "+";
    Padding: (Horizontal: 0);
    Anchor: (Width: 32, Height: 32, Left: 12, Bottom: 8);
    TooltipText: "Add new component";
    TextTooltipStyle: $C.@DefaultTextTooltipStyle;
  }
}

Group {
  Background: #393426(0.5);
  Anchor: (Height: 1);
}

Group #ListContainer {
  FlexWeight: 1;
  Anchor: (Bottom: 20);
  LayoutMode: TopScrolling;
  ScrollbarStyle: $C.@DefaultScrollbarStyle;
}

Group {
  LayoutMode: Right;

  $C.@TextButton #Save {
    @Text = "Save";
    Anchor: (Width: 120, Height: 44, Right: 12);
  }

  $C.@SecondaryTextButton #Cancel {
    @Text = "Cancel";
    Anchor: (Width: 120, Height: 44);
  }
}